
<%= content_tag :div, :class => 'vs-rolls', data: {vs_rolls: @vs_rolls} do %><% end %>
<%= content_tag :div, :class => 'vs-names', data: {vs_names: @vs_names} do %><% end %>
<script type="text/javascript">setCookieVals()</script>

<%= form_for(@bl, :remote => true) do |f| %>
    <%= f.label :race_id %>
    <%= f.collection_select :race_id, Race.all, :id, :name, {:include_blank => true},
                            {:onchange => 'displayRaceTable(this.value);'} %>

    <br>
    <%= f.label :name %>
    <%= f.text_field :name %>

    <br>

    <table>
      <tr>
        <td>

          <%= f.label 'strength' %>
          <%= f.select :strength,  @vs_rolls, {:include_blank => true},
                       {:onchange => 'updateRolls(this.value);', :class => 'vs-selector'} %>
          <%= f.label 'dexterity' %>
          <%= f.select :dexterity, @vs_rolls, {:include_blank => true},
                       {:onchange => 'updateRolls(this.value);', :class => 'vs-selector'} %>
          <%= f.label 'iq' %>
          <%= f.select :iq, @vs_rolls, {:include_blank => true},
                       {:onchange => 'updateRolls(this.value);', :class => 'vs-selector'} %>
          <%= f.label 'agility' %>
          <%= f.select :agility, @vs_rolls, {:include_blank => true},
                       {:onchange => 'updateRolls(this.value);', :class => 'vs-selector'} %>
          <%= f.label 'constitution' %>
          <%= f.select :constitution, @vs_rolls, {:include_blank => true},
                       {:onchange => 'updateRolls(this.value);', :class => 'vs-selector'} %>
          <%= f.label 'aggression' %>
          <%= f.select :aggression, @vs_rolls, {:include_blank => true},
                       {:onchange => 'updateRolls(this.value);', :class => 'vs-selector'} %>
          <%= f.label 'intuition' %>
          <%= f.select :intuition, @vs_rolls, {:include_blank => true},
                       {:onchange => 'updateRolls(this.value);', :class => 'vs-selector'} %>
          <%= f.label 'charisma' %>
          <%= f.select :charisma, @vs_rolls, {:include_blank => true},
                       {:onchange => 'updateRolls(this.value);', :class => 'vs-selector'} %>

        </td>
        <td>
          Available scores:<br>
          <div id="rolls-list-target">
            <% @vs_rolls.each do |score| %>
              <%= score %> <br>
            <% end %>
          </div>
        </td>
      </tr>
    </table>

    <br>
    <%= f.submit("Create new Battlelord") %>

<% end %>
